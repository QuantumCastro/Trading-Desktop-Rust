{
  "name": "@app/root",
  "private": true,
  "version": "0.2.0",
  "description": "Workspace root for Astro + Tauri desktop template.",
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "dev:frontend": "pnpm -F @app/frontend dev",
    "dev:tauri": "pnpm -F @app/frontend tauri:dev",
    "build:frontend": "pnpm -F @app/frontend build",
    "build:tauri": "pnpm -F @app/frontend tauri:build",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:e2e": "pnpm -F @app/frontend test:e2e",
    "audit": "pnpm audit --prod"
  },
  "engines": {
    "node": ">=24.1.0",
    "pnpm": ">=10.25.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [],
      "allowedVersions": {
        "react": "19.x",
        "react-dom": "19.x",
        "eslint": "9.x"
      }
    },
    "overrides": {
      "glob": ">=10.5.0",
      "mdast-util-to-hast": ">=13.2.1",
      "devalue": ">=5.6.3"
    }
  }
}
