{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Trading",
  "version": "0.1.0",
  "identifier": "com.template.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev --host 127.0.0.1 --port 4321",
    "devUrl": "http://127.0.0.1:4321",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Trading",
        "url": "index.html",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost http://127.0.0.1:4321 ws://127.0.0.1:4321;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
